Thickness = 2,
Transparency = 0.5
}):Play()
TweenService:Create(btnGlow, TweenInfo.new(0.3), {
Thickness = 0,
Transparency = 0.3
}):Play()
TweenService:Create(btnIcon, TweenInfo.new(0.3), {
TextSize = 24 * getScale()
}):Play()
end)

