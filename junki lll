    ColorSequenceKeypoint.new(0, Color3.fromRGB(200, 200, 200)), -- Made brighter
    ColorSequenceKeypoint.new(1, Color3.fromRGB(220, 220, 220)) -- Made brighter
}
barGradient.Parent = loadingBar

